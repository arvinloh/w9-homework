{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Map of Australia",
  "width": 800,
  "height": 500,
  "projection": {
    "type": "mercator"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/arvinloh/w9-homework/refs/heads/main/js/ne_50m_admin_1_states_provinces.json",
    "format": { "type": "topojson", "feature": "ne_50m_admin_1_states_provinces" }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/arvinloh/w9-homework/refs/heads/main/js/data.csv",
          "format": { "type": "csv" }
        },
        "key": "State",
        "fields": ["live births"]
      }
    },
    {
      "calculate": "datum['live births']",
      "as": "live births"
    }
  ],
  "mark": { "type": "geoshape" },
  "encoding": {
    "color": {
      "field": "live births",
      "type": "quantitative",
      "scale": { "scheme": "blues" }
    },
    "tooltip": [
      { "field": "properties.name", "type": "nominal", "title": "State" },
      { "field": "live births", "type": "quantitative", "title": "Live Births" }
    ]
  }
}
